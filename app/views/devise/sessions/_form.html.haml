= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => 'form-login', :class => 'form-inline'}) do |f|
  %p.header-message{:style => 'padding:5px;'}

  .form-group
    %label Username:
    = f.text_field :login, :class => "form-control", :size => 44
  .form-group
    %label Password:
    = f.password_field :password, :class => "form-control", :size => 44
  - if devise_mapping.rememberable?
    .form-group.form-group-checkbox.pull-right
      %label.checkbox
      = f.check_box :remember_me
      Remember me
      = f.submit "SIGN IN", :class => "btn btn-primary pull-right.col-md-4.col-sm-4.col-xs-4"

  .form-group.pull-left{:style => 'padding-top:1em;'}
    = link_to 'Forgot your password?', '#', :id => 'forgot-password-modal-link'


  .divide
    &nbsp;
  .row
    .col-xs-12.col-sm-12.col-md-6.col-lg-6
      = link_to(image_tag('facebook_signin.png'), '/users/auth/facebook', :class => 'facebook-login-link')
    .col-xs-12.col-sm-12.col-md-6.col-lg-6
      = link_to(image_tag('twitter_signin.png'), '/users/auth/twitter', :target => "_self")
