.row
  .span11
    .body-content-static
      %h2 Forgot your password?
.row
  .span6{:style => "padding-left: 18px"}
    %p Enter the matching email for your account and we'll mail you reset insructions
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f|
      = devise_error_messages!
      .control-group
        %label.control-label Email:
        .controls
          = f.email_field :email, :class => "input-xlarge"
          %br
          %br
          = f.submit "Send me reset password instructions", :class => "btn"
  .span5
    .mid-header Other options from here...
    = render "devise/shared/links"
