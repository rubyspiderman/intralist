#registration
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    = link_to(image_tag('facebook_signin.png'), '/users/auth/facebook', :target => "_self")
  .col-xs-12.col-sm-12.col-md-6.col-lg-6
    = link_to(image_tag('twitter_signin.png'), '/users/auth/twitter', :target => "_self")
  .clear.form-height
  %center
    %a.form-signup{:href => "#"} Sign up with a form
  .registration-form
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name, :class => "form-inline")) do |f|
      .form-group
        %p.header-message{:style => 'padding:5px;'}

      .form-group
        %label Username:
        = f.text_field :username, :class => "form-control"
      .form-group
        %label Email:
        = f.email_field :email, :class => "form-control"
      .form-group
        %label Password:
        = f.password_field :password, :class => "form-control"
      .form-group
        %label Confirm Password:
        = f.password_field :password_confirmation, :class => "form-control"
        %br
        = f.submit "SIGN UP", :class => 'btn btn-primary pull-right'



