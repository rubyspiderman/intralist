.center-block
  .row
    .col-xs-12.col-sm-6.col-md-12
      %p.header-message{:style => 'padding:5px;'}

      .center-block

        .pull-left{:style => "margin-left: 30px; width:80%"}
          = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-horizontal",
                                  :id => "forgot-password-modal"}) do |f|
            .form-group
              %label Email:
              = f.email_field :email, :class => "form-control"

            .form-group
              = f.submit "Send me reset password instructions", :class => 'btn btn-primary pull-right'
