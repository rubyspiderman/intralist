!!!
%html
  %head
    %title Intralist
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Bitter|Open+Sans"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            .span12
              .search.pull-left.top-margin.search-margin-home
                = form_tag lists_path, :method => :get, :class => "form-search" do
                  = text_field_tag :query, '', :class => 'left span6', :value => 'Search Intralist'
                  %button.submit-search
                    %i.icon-search.icon-white
              .right
                %ul.secondary
                  %li Member? #{nav_link "Log in", new_user_session_path, ''}
      .row
        = yield
      .row{:style => "height: 65px;"}
    .navbar.navbar-fixed-bottom.footer
      = render :partial => "/shared/footer"

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-39839253-1', 'intralist.com');
      ga('send', 'pageview');
